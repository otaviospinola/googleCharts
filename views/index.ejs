<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart', 'controls']});
      google.charts.setOnLoadCallback(drawChart);
      
      function drawChart(){
        const info = <%- JSON.stringify(info) %>

        var data = google.visualization.arrayToDataTable(info);

        var dashboard = new google.visualization.Dashboard(
            document.getElementById('dashboard_div')
        );

        var slicer = new google.visualization.ControlWrapper({
          'controlType': 'NumberRangeFilter',
          'containerId': 'slicer',
          'options': {
            'filterColumnLabel': 'Market Value (Billions)'
          }
        });

        var slicer2 = new google.visualization.ControlWrapper({
          'controlType': 'CategoryFilter',
          'containerId': 'slicer-2',
          'options': {
            'filterColumnLabel': 'Organization Name'
          }
        });

        var chart = new google.visualization.ChartWrapper({
          'chartType': 'BarChart',
          'containerId': 'barchart',
          'options': {
            'width': 600,
            'height': 500,
            'isStacked': 'percent' 
          }
        });
        var chart2 = new google.visualization.ChartWrapper({
          'chartType': 'PieChart',
          'containerId': 'dunut-chart',
          'options': {
            'width': 600,
            'height': 500,
          }
        });
        dashboard.bind([slicer, slicer2], [chart,chart2])

        dashboard.draw(data);
      }
    </script>
  </head>
  <body>
    <h1 class="text-center">Dashboard Interativo <span class="badge bg-primary">by TaskIT</span></h1>
    <!-- <h4 class="text-center display-5">Dashboard Interativo
      <small class="text-muted">by TaskIT</small></h4> -->
    <hr>
    <div class="container"  id="dashboard_div">
      <div class="row align-items-start">
        <div class="col">
            <div id="slicer"></div>
        </div>
        <div class="col">
          <div id="slicer-2"></div>
      </div>
        <div class="col">
          <div id="barchart"></div>
        </div>
        <div class="col">
          <div id="dunut-chart"></div>
        </div>
      </div>
    </div>
  </body>
</html>
